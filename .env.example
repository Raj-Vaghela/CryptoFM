# RADIOO Environment Configuration Example
# Copy this file to .env and add your API keys

# API Keys
COINGECKO_API_KEY=your_coingecko_api_key
WHALE_ALERT_API_KEY=your_whale_alert_api_key
CRYPTO_PANIC_API_KEY=your_cryptopanic_api_key
GEMINI_API_KEY=your_gemini_api_key

# Google Cloud Text-to-Speech
GOOGLE_CLOUD_TTS_API_KEY=your_google_cloud_tts_api_key
GCP_VOICE_NAME=en-GB-Chirp3-HD-Orus
GCP_VOICE_LANGUAGE=en-GB
GCP_VOICE_GENDER=MALE

# API Models
GEMINI_MODEL=gemini-2.0-flash

# Server Configuration
API_PORT=3000
VOICE_PORT=3001

# Intervals (in milliseconds)
FETCH_INTERVAL=120000  # 2 minutes
ANALYSIS_INTERVAL=180000  # 3 minutes
SCRIPT_INTERVAL=60000  # 60 seconds 